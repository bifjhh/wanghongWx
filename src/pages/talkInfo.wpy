</template>
<script>
import wepy from 'wepy';
export default class Example extends wepy.page {
  config = {
    navigationBarTitleText: '说说正文'
  };

  data = {
    display: 'none',
    isno: 'dsp_none',
    showAdd: '',
    list: [
      {
        id: 0,
        reply: [{ id: 0 }, { id: 1 }]
      },
      {
        id: 1,
        reply: [{ id: 0 }, { id: 1 }, { id: 2 }, { id: 3 }]
      },
      {
        id: 2,
        reply: [{ id: 0 }]
      },
      {
        id: 3,
        reply: [{ id: 0 }, { id: 1 }, { id: 2 }, { id: 3 }]
      }
    ],
    addMsg: '',
    objs: {}
  };

  components = {};

  methods = {
    getAll(index) {
      let that = this;
      console.log(index);
      that.list[index].isshow = true;
      return;
      that.showAdd = 'dsp_none';
      that.isno = '';
    },
    praise(type, id) {
      let that = this;
      wepy
        .request({
          url: '/say/do_like',
          data: { say_id: that.objs.id, dotype: type }
        })
        .then(res => {
          console.log(res.data.status);
          if (res.data.status == '1') {
            that.objs.liked = !that.objs.liked;
            // that.objs.lists[index].say_like = res.data.data.like;
            that.$apply();
          }
        });
    },
    input(e) {
      this.addMsg = e.detail.value;
    },
    confirm(e) {
      let that = this;
      console.log(that);
      // console.log(e.detail.value)
      wepy
        .request({
          url: '/say/comment',
          data: {
            sign: '',
            say_id: that.objs.id,
            content: that.addMsg
          }
        })
        .then(res => {
          if (res.data.status == '1') {
            console.log(res.data);
            that.addMsg = '';
            that.getInfo();
          }
        });
    },
    showImgs(img, imgs) {
      wx.previewImage({
        current: img, // 当前显示图片的http链接
        urls: imgs // 需要预览的图片http链接列表
      });
    },
    amap(lng, lat, address) {
      console.log(lng, lat, address);
      wx.getSetting({
        success(res) {
          if (!res.authSetting['scope.userLocation']) {
            wx.authorize({
              scope: 'scope.userLocation',
              success() {
                wx.openLocation({
                  longitude: lng,
                  latitude: lat,
                  address: address
                });
              }
            });
          }
          wx.openLocation({
            longitude: lng,
            latitude: lat,
            address: address
          });
        }
      });
    }
  };

  events = {};

  watch = {};

  computed = {};

  onLoad(options) {
    wx.showLoading({
      title: ''
    });
    console.log(options.id);
    this.options = options;
    this.getInfo();
  }
  getInfo() {
    let that = this;
    wepy
      .request({
        url: '/say/detail',
        data: { sign: '', id: that.options.id, page: 1 }
      })
      .then(res => {
        if (res.data.status != 1) return;
        that.objs = res.data.data;
        wx.hideLoading();
        that.display = 'block';
        that.$apply();
      });
  }

  onShow() {
    let that = this;
    that.list.forEach(e => {
      if (e.reply.length > 2) {
        e.isshow = false;
      } else {
        e.isshow = true;
      }
    });
  }
}
</script>

